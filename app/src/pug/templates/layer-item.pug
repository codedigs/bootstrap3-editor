      .pull-right.layer-button
        button.btn.btn-danger.btn-xs.delete-layer(data-layer-name="Layer 1")
          span.glyphicon.glyphicon-trash

      h4.panel-title
        a.layer-item-btn(
          data-toggle="collapse"
          data-parent="#bs3-ed-layers"
          href="#bs3-ed-layer1"
          aria-expanded="true"
          aria-controls="bs3-ed-layer1"
