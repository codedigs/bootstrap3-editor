mixin layer_row_col(layerRowColParentID, layer_num, row_num, col_num, active=false)
  - var layerRowColID = "layer" + layer_num + "-row" + row_num + "-col" + col_num;

  .panel.panel-default.layer-row-col&attributes({
    'data-layer-row-col-number': row_num
  })
    .panel-heading(role="tab")
      .pull-right.row-button
        button.btn.btn-danger.btn-xs.delete-layer-row-col&attributes({
          'data-col-name': "Col " + col_num
        })
          span.glyphicon.glyphicon-trash

      h4.panel-title
        a.layer-row-col-btn(
          data-toggle="collapse"
          aria-expanded="true"
        )&attributes({
          'data-parent': "#" + layerRowColParentID,
          href: "#" + layerRowColID,
          'aria-controls': layerRowColID
        })
          span.glyphicon.glyphicon-chevron-up&attributes({
            class: active ? "active" : ""
          })
          |
          | Col #{col_num}

    .panel-collapse.collapse(role="tabpanel")&attributes({
      'id': layerRowColID,
      class: active ? "in" : ""
    })
      .panel-body
        p Hello World!
