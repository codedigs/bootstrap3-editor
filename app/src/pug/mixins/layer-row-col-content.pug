            .btn-group(data-toggle="buttons")
              label.btn.btn-default.btn-xs
                input(
                  type="checkbox"
                  name="col-xs"
                  autocomplete="off"
                )
                | xs
          input.form-control(
            type="number"
            name="col-xs-val"
            autocomplete="off"
            min="1"
            max="12"
          )
